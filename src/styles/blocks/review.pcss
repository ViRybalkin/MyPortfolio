.review{
  &__content{
    padding-left: 20%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 400px;
    width: 85%;
    @include desktop{
      height: 450px;
      width: 100%;
    }
    @include tablets{
      height: 350px;
      width: 95%;
    }
    @include phones{
      height: 400px;
      width: 90%;
      padding-left: 0;
    }
  }
  &__text{
    color: rgba($dark,.6);
    font-weight: 600;
    margin-bottom: 60px;
    position: relative;
    line-height: 30px;
    &:before{
      content: "";
      position: absolute;
      display: block;
      width: 76px;
      height: 70px;
      background: svg-load('quote.svg',fill=#DDE3EC,width=100%,height=100%) no-repeat;
      top: 0;
      line-height: 1;
      left: -90px;
      @include tablets{
        width: 37px;
        height: 27px;
        left: -32px;
      }
      @include phones{
        display: none;
      }
    }
  }
  &__list{
    display: flex;
  }
  &__item {
    margin-right: 20px;
    @include tablets{
      margin-right: 0;
    }
    @include phones{
      width: 100%;
    }
  }
}

.user-display{
  display: flex;
  align-items: center;
  &__avatar{
    margin-right: 30px;
  }
  &__style{
    width: 75px;
    height: 75px;
  }
  &__photo{
    border: 2px solid transparent;
    border-radius: 50%;
    transition: .4s;
    &:hover{
      border: 2px solid $icon-color-hover;
    }
  }
  &__name{
  font-weight: 600;
  margin-bottom: 12px;
  }
  &__job{
    color: rgba($dark,.5);
  }
}

